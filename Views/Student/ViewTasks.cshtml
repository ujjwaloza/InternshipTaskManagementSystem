@model IEnumerable<InternshipTaskManagementSystem.Models.TaskModel>

<div class="container mt-5">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">My Tasks</h3>
        <span class="badge bg-primary fs-6">
            Total Tasks: @Model.Count()
        </span>
    </div>

    <!-- Task Table Card -->
    <div class="card shadow-lg border-0">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Assigned Tasks</h5>
        </div>

        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Task Title</th>
                        <th>Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@task.Title</td>

                            <!-- STATUS BADGE -->
                            <td>
                                @if (task.Status == "Done")
                                {
                                    <span class="badge bg-success px-3 py-2">Done</span>
                                }
                                else if (task.Status == "InProgress")
                                {
                                    <span class="badge bg-warning text-dark px-3 py-2">In Progress</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary px-3 py-2">To Do</span>
                                }
                            </td>

                            <!-- ACTION BUTTON -->
                            <td class="text-center">
                                @if (task.Status == "ToDo")
                                {
                                    <a asp-action="StartTask"
                                       asp-route-id="@task.TaskId"
                                       class="btn btn-sm btn-outline-primary">
                                        ▶ Start
                                    </a>
                                }
                                else if (task.Status == "InProgress")
                                {
                                    <a asp-action="CompleteTask"
                                       asp-route-id="@task.TaskId"
                                       class="btn btn-sm btn-outline-success">
                                        ✔ Complete
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Completed</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
