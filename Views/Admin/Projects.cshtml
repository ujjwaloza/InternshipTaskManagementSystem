@model IEnumerable<InternshipTaskManagementSystem.Models.Project>

@{
    ViewData["Title"] = "Manage Projects";
}

<div class="container-fluid mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">
            <i class="bi bi-kanban-fill me-2 text-primary"></i>
            Projects Management
        </h3>

        <a asp-action="CreateProject" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>
            Create Project
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Student</th>
                        <th>Mentor</th>
                        <th>Duration</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No projects found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var project in Model)
                        {
                            <tr>
                                <td class="fw-semibold">
                                    @project.Title
                                </td>

                                <td>
                                    @(project.Student?.FullName ?? "—")
                                </td>

                                <td>
                                    @(project.Mentor?.FullName ?? "—")
                                </td>

                                <td>
                                    @if (project.StartDate.HasValue && project.EndDate.HasValue)
                                    {
                                        <span class="badge bg-info">
                                            @project.StartDate.Value.ToString("dd MMM yyyy")
                                            -
                                            @project.EndDate.Value.ToString("dd MMM yyyy")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not set</span>
                                    }
                                </td>

                                <td class="text-center">
                                    <a asp-action="EditProject"
                                       asp-route-id="@project.ProjectId"
                                       class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <a asp-action="DeleteProject"
                                       asp-route-id="@project.ProjectId"
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this project?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>
