@model InternshipTaskManagementSystem.Models.Project

@{
    ViewData["Title"] = "Create Project";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-kanban-fill me-2"></i>
                        Create New Project
                    </h4>
                </div>

                <div class="card-body p-4">

                    <div asp-validation-summary="All" class="alert alert-danger"></div>

                    <form asp-action="CreateProject" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">
                                Project Title
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="Enter project title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">
                                Project Description
                            </label>
                            <textarea asp-for="Description" rows="4"
                                      class="form-control"
                                      placeholder="Brief description of the project"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">
                                    Assign Student
                                </label>
                                <select asp-for="StudentId" class="form-select">
                                    <option value="">-- Select Student --</option>
                                    @foreach (var s in ViewBag.Students)
                                    {
                                        <option value="@s.UserId">@s.FullName</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">
                                    Assign Mentor
                                </label>
                                <select asp-for="MentorId" class="form-select">
                                    <option value="">-- Select Mentor --</option>
                                    @foreach (var m in ViewBag.Mentors)
                                    {
                                        <option value="@m.UserId">@m.FullName</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label fw-semibold">
                                    Start Date
                                </label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EndDate" class="form-label fw-semibold">
                                    End Date
                                </label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                            </div>
                        </div>

                       
                        <div class="d-flex justify-content-end mt-4">
                            <a asp-action="Projects" class="btn btn-outline-secondary me-2">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-save me-1"></i>
                                Save Project
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>
