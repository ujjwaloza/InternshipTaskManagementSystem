@model IEnumerable<InternshipTaskManagementSystem.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}


<div class="container mt-4">

   
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold"> User Management</h3>

        <a asp-action="CreateUser" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Create User
        </a>
    </div>

  
    <div class="mb-3">
        <input type="text"
               id="searchInput"
               class="form-control"
               placeholder="Search by name, email or role..." />
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0" id="usersTable">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Created</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>

                            <td class="fw-semibold">
                                @user.FullName
                            </td>

                            <td>@user.Email</td>

                            <td>
                                @if (user.Role == "Admin")
                                {
                                    <span class="badge bg-danger">Admin</span>
                                }
                                else if (user.Role == "Mentor")
                                {
                                    <span class="badge bg-primary">Mentor</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Student</span>
                                }
                            </td>

                            <td>
                                @user.CreatedAt.ToString("dd MMM yyyy")
                            </td>

                            <td class="text-center">
                                <a asp-action="EditUser"
                                   asp-route-id="@user.UserId"
                                   class="btn btn-sm btn-warning me-1">
                                    Edit
                                </a>

                                <a asp-action="DeleteUser"
                                   asp-route-id="@user.UserId"
                                   class="btn btn-sm btn-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

</div>

<script>
    document.getElementById("searchInput").addEventListener("keyup", function () {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll("#usersTable tbody tr");

        rows.forEach(row => {
            let text = row.innerText.toLowerCase();
            row.style.display = text.includes(filter) ? "" : "none";
        });
    });
</script>
